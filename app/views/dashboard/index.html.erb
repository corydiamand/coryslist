<div id="dashboard-container">
	<h1>My To Do Lists</h1>
	<p>Create New List</p>
	
</div>


  <%= form_for(List.new) do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
    <div class="actions"><%= f.submit "Create List" %></div>
  <% end %>

<div id ="lists-container">
	<div class="list-container">
		<% @lists.each do |l| %>

			<div class="list-title">
				<%= l.title %>
			</div>
			<div class="list-description">
	  			<%= l.description %>
	  		</div>
	  		<div class="tasks-container">
	  			<% l.tasks.each do |t| %>
		  			<div class="task-container">
			  			<div class="task-mark-complete">
			  			</div>
			  			<div class="task-title">
			  				<%= t.title %>
			  			</div>
			  			<div class="task-description">
			  				<%= t.description %>
			  			</div>
			  			<div class="task-delete-link">
			  				<%= link_to "Delete Task", t, method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
			  			</div>
			  			<div class="task-edit-link">
			  			</div>
		  			</div>
	  			<% end %>
	  		</div>
	  		<div class="create-task-link">
	  			<%= link_to "Add task", new_task_path(:list_id => l.id), :method => :post %>
	  		</div>
	  	<% end %>
  	</div>
</div>